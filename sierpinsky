def triangle(start, size):
    vertex = [[], [], []]
    vertex[0] = start
    vertex[1] = [start[0]+size, start[1]]
    vertex[2] = [start[0]+.5*size, start[1] + size*math.sin(math.radians(60))]
    
    return vertex

while run:
    
    for event in pygame.event.get():
        
        if event.type == pygame.QUIT:
            run = False

